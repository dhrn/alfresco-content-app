{
  "$schema": "../../../extension.schema.json",
  "$id": "ags.extension.metadata",
  "$vendor": "Alfresco Software, Ltd.",
  "$license": "LGPL-3.0",
  "$runtime": "1.5.0",
  "$version": "1.0.0",
  "$name": "ags-extension",
  "$description": "demo plugin",

  "rules": [
    {
      "id": "app.extension.isFolder",
      "type": "core.every",
      "parameters": [
        { "type": "rule", "value": "app.selection.folder" }
      ]
    },
    {
      "id": "app.extension.isFile",
      "type": "core.every",
      "parameters": [
        { "type": "rule", "value": "app.selection.file" }
      ]
    }
  ],

  "features": {
    "toolbar": [
      {
        "id": "app.toolbar.more",
        "children": [
          {
            "id": "app.toolbar.extension.upload.files",
            "order": 1600,
            "title": "Upload File",
            "icon": "file_upload",
            "rules": {
              "visible": "app.extension.isFolder"
            },
            "actions": {
              "click": "CUSTOM_UPLOAD_FILES"
            }
          },
          {
            "id": "app.toolbar.extension.rename.file",
            "order": 1605,
            "title": "Rename File",
            "icon": "create",
            "rules": {
              "visible": "app.extension.isFile"
            },
            "actions": {
              "click": "RENAME_FILE"
            }
          }
        ]
      }
    ],
    "contextMenu": [
      {
        "id": "app.create.separator.6",
        "type": "separator",
        "order": 1500
      },
      {
        "id": "app.toolbar.extension.upload.file",
        "order": 1501,
        "title": "Upload File",
        "icon": "file_upload",
        "rules": {
          "visible": "app.extension.isFolder"
        },
        "actions": {
          "click": "CUSTOM_UPLOAD_FILES"
        }
      },
      {
        "id": "app.toolbar.extension.rename.file",
        "order": 1502,
        "title": "Rename File",
        "icon": "create",
        "rules": {
          "visible": "app.extension.isFile"
        },
        "actions": {
          "click": "RENAME_FILE"
        }
      }
    ]
  }
}
